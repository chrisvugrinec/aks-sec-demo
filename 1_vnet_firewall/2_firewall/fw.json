{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "fw_name": {
            "defaultValue": "demo-azure-firewall",
            "type": "String"
        },
        "fw_public_ip": {
            "type": "String"
        },
        "aksVnetRange": {
            "type": "String"
        },
        "public_ip_id": {
            "type": "String"
        },
        "mgmt_vnet_id": {
            "type": "String"
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/azureFirewalls",
            "apiVersion": "2020-04-01",
            "name": "[parameters('fw_name')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "AZFW_VNet",
                    "tier": "Standard"
                },
                "threatIntelMode": "Alert",
                "additionalProperties": {},
                "ipConfigurations": [
                    {
                        "name": "fw_ip_config",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[parameters('public_ip_id')]"
                            },
                            "subnet": {
                                "id": "[concat(parameters('mgmt_vnet_id'), '/subnets/AzureFirewallSubnet')]"
                            }
                        }
                    }
                ],
                "networkRuleCollections": [
                    {
                        "name": "AKS_NSG_Rules",
                        "properties": {
                            "priority": 4000,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "AKS_UDP_Requirements",
                                    "protocols": [
                                        "UDP"
                                    ],
                                    "sourceAddresses": [
                                        "*"
                                    ],
                                    "destinationAddresses": [
                                        "*"
                                    ],
                                    "sourceIpGroups": [],
                                    "destinationIpGroups": [],
                                    "destinationFqdns": [],
                                    "destinationPorts": [
                                        "1194",
                                        "53",
                                        "123"
                                    ]
                                },
                                {
                                    "name": "AKS_TCP_Requirements",
                                    "protocols": [
                                        "TCP"
                                    ],
                                    "sourceAddresses": [
                                        "*"
                                    ],
                                    "destinationAddresses": [
                                        "*"
                                    ],
                                    "sourceIpGroups": [],
                                    "destinationIpGroups": [],
                                    "destinationFqdns": [],
                                    "destinationPorts": [
                                        "22"
                                    ]
                                },
                                {
                                    "name": "AKS_Outbound_ServiceTag_Reqs",
                                    "protocols": [
                                        "Any"
                                    ],
                                    "sourceAddresses": [
                                        "[parameters('aksVnetRange')]"
                                    ],
                                    "destinationAddresses": [
                                        "EventHub",
                                        "AzureCosmosDB",
                                        "Storage",
                                        "Sql",
                                        "AzureContainerRegistry"
                                    ],
                                    "sourceIpGroups": [],
                                    "destinationIpGroups": [],
                                    "destinationFqdns": [],
                                    "destinationPorts": [
                                        "*"
                                    ]
                                }
                            ]
                        }
                    }
                ],
                "applicationRuleCollections": [
                    {
                        "name": "AKS_Global_Required",
                        "properties": {
                            "priority": 100,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "Required_Basic_AKS",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "*.cdn.mscr.io",
                                        "mcr.microsoft.com",
                                        "*.data.mcr.microsoft.com",
                                        "management.azure.com",
                                        "login.microsoftonline.com",
                                        "packages.microsoft.com",
                                        "acs-mirror.azureedge.net"
                                    ],
                                    "sourceAddresses": [
                                        "*"
                                    ],
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "NeededForDemo_Policy_DockerHUB",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "auth.docker.io",
                                        "registry-1.docker.io",
                                        "index.docker.io",
                                        "dseasb33srnrn.cloudfront.net",
                                        "production.cloudflare.docker.com"
                                    ],
                                    "sourceAddresses": [
                                        "*"
                                    ],
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "Required_Policy_AKS",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "gov-prod-policy-data.trafficmanager.net",
                                        "raw.githubusercontent.com",
                                        "*.gk.australiaeast.azmk8s.io",
                                        "dc.services.visualstudio.com"
                                    ],
                                    "sourceAddresses": [
                                        "*"
                                    ],
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "AKS_Node_API_FROM_NODE_Communication",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        },
                                        {
                                            "protocolType": "Http",
                                            "port": 80
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "*.privatelink.australiaeast.azmk8s.io",
                                        "*.hcp.australiaeast.azmk8s.io",
                                        "*.tun.australiaeast.azmk8s.io"
                                    ],
                                    "sourceAddresses": [
                                        "*"
                                    ],
                                    "sourceIpGroups": []
                                },
                                {
                                    "name": "AKS_Node_API_FROM_API_Communication",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        },
                                        {
                                            "protocolType": "Http",
                                            "port": 80
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "*.privatelink.australiaeast.azmk8s.io",
                                        "*.hcp.australiaeast.azmk8s.io",
                                        "*.tun.australiaeast.azmk8s.io"
                                    ],
                                    "sourceAddresses": [
                                        "*"
                                    ],
                                    "sourceIpGroups": []
                                },

                                {
                                    "name": "AKS_AzureMonitoring_Requirement",
                                    "protocols": [
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [],
                                    "targetFqdns": [
                                        "dc.services.visualstudio.com",
                                        "*.ods.opinsights.azure.com",
                                        "*.oms.opinsights.azure.com",
                                        "*.microsoftonline.com",
                                        "*.monitoring.azure.com"
                                    ],
                                    "sourceAddresses": [
                                        "*"
                                    ],
                                    "sourceIpGroups": []
                                }

                            ]
                        }
                    }
                ],
                "natRuleCollections": [
                ]
            }
        }
    ]
}
